@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <title>Acceso al sistema</title>
    <!--Css-->
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <!--javascript-->
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    
</head>
<body>
    <div class="container">
        
            
                <div>
                    <form action="/" method="post">
                        <div class="form-group">
                            <label for="exampleFormControlTextarea1">RFC</label>
                            <input type="text" name="txtrucdni" id="txtrucdni" required class="form-control" placeholder="Enter email">
                        </div>

                        <div class="form-group">
                            <label for="email">Usuario</label>
                            <input type="text" name="txtUsers" id="txtUsers" required class="form-control" placeholder="Digite usuario">
                        </div>
                        <div class="form-group">
                            <div class="show-eye" id="faeye" onclick="showHidelogin();"><i class="fa fa-eye" id="faeyes"></i></div>
                            <div class="show-eye-slash" id="faeyeslashs" onclick="showHidelogin();"><i class="fa fa-eye-slash" id="faeyeslash"></i></div>
                            <label for="pwd">Contraseña:</label>
                            <input type="password" class="form-control" name="txtContraseña" required placeholder="Enter password" id="pwd">
                        </div>
                        <div class="form-group form-check">
                            <label class="form-check-label">
                                <input class="form-check-input" type="checkbox"> Terminos y condiciones
                            </label>
                        </div>
                        
                        <div class="form-row" style="width:50px;">
                            <input type="button" class="btn btn-info" name="btnAcceder" onclick="Acceder();" value="Iniciar sesion" />
                        </div>
                        <div class="lblslogin">
                            <span><a href="#">Recuperar contraseña</a></span>
                            &nbsp;&nbsp;
                            <span><a href="@Url.Action("RegistroEmpresa","RegistroEmpresa")">Registrarse</a></span>
                        </div>
                    </form>
                    
                        
                    
                </div>
           
    </div>
        
        
     

</body>
</html>